            android:layout_alignParentStart="true" />

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/sbq8"
            app:dsb_min="0"
            app:dsb_max="10"
            app:dsb_value="0"
